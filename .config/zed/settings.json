// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "ui_font_size": 14,
  "use_auto_surround": false,
  "use_autoclose": false,
  "preview_tabs": {
    "enabled": false
  },
  "max_tabs": 20,
  "tab_bar": {
    "show": false
  },
  "toolbar": {
    "quick_actions": false,
    "breadcrumbs": true,
    "selections_menu": false
  },
  "relative_line_numbers": "enabled",
  "vertical_scroll_margin": 20,
  "vim_mode": true,
  "buffer_font_size": 14,
  "cursor_shape": "block",
  "ui_font_family": "CommitMono Nerd Font",
  "buffer_font_family": "CommitMono Nerd Font",
  "cursor_blink": false,
  "experimental.theme_overrides": {
    "background.appearance": "blurred",

    // Melange Dark translucent overrides (95% opacity)
    "background": "#292522f2", // base background
    "status_bar.background": "#292522f2",
    "title_bar.background": "#292522f2",
    "elevated_surface.background": "#292522f2",
    "surface.background": "#292522f2",
    "editor.background": "#00000000",
    "editor.gutter.background": "#00000000",
    "editor.line_number": "#86746299",
    "editor.active_line_number": "#FFB929",
    "editor.active_line.background": "#00000000",
    "editor.indent_guide": "#A3A9CE1a",
    "editor.indent_guide_active": "#A3A9CE33",

    "border": "#86746240",
    "border.variant": "#86746220",
    "hint.background": "#403A36cc",

    "tab_bar.background": "#00000000",
    "tab.active_background": "#A3A9CE20",
    "tab.inactive_background": "#00000000",
    "element.selected": "#A3A9CE20",

    "panel.background": "#00000000",
    "panel.indent_guide": "#A3A9CE12",
    "panel.indent_guide_hover": "#A3A9CE16",
    "panel.indent_guide_active": "#A3A9CE1a",
    "panel.focused_border": "#00000000",

    "toolbar.background": "#00000000",
    "terminal.background": "#00000000",
    "scrollbar.track.background": "#00000000",
    "scrollbar.track.border": "#00000000",
    "scrollbar.thumb.background": "#A3A9CE20",

    "ghost_element.background": "#A3A9CE05",
    "ghost_element.hover": "#A3A9CE10",
    "ghost_element.active": "#A3A9CE15",
    "ghost_element.selected": "#A3A9CE20",
    "drop_target.background": "#A3A9CE20",
    "element.hover": "#A3A9CE10",
    "editor.highlighted_line.background": "#A3A9CE25",

    "players": [
      {
        "cursor": "#FFB929"
      }
    ]
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Melange Dark"
  }
}
